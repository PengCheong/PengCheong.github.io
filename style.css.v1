@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap');
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}
body {
    width: 100%;
    height: 100%;
    align-items: center;
    min-height: 100vh;
    background: #000;
}
.root {
    transform: translateY(140%);
}
a {
    color: #000;
}

/* NAME TAG */
h1 {
    display: table;
    margin: 0 auto;
    font-size: 6em;
    font-weight: 500;
    color: #333;
    letter-spacing: 4px;
    cursor: default;
}
h1 span {
    transition: 0.5s;
}
h1:hover span:nth-child(1) {
    margin-right: 10px;
}
h1:hover span:nth-child(1)::after {
    content: "";
}
h1:hover span:nth-child(2) {
    margin-left: 16px;
}
h1:hover span {
    color: #fff;
    text-shadow: 0 0 10px #eee,
                 0 0 20px #eee;
}

/* LINK TAG */
.links {
    display: table;
    margin: 0 auto;
    padding: 0 0 20px 0;
}
.link {
    text-decoration: none;
    color: #333;
    font-size: 1.6em;
    display: inline-block;
    padding: 0 8px 0 8px;
    transition: 0.5s;
}
.link:hover {
    color: #fff;
}
.bl:hover {
    margin: 0 16px 0 0;
    text-decoration: underline darkgrey 5px;
}
.ru:hover {
    margin: 0 14px 0 14px;
    text-decoration: underline yellowgreen 5px;
}
.gh:hover {
    margin: 0 14px 0 14px;
    text-decoration: underline darkslateblue 5px;
}
.tk:hover {
    margin: 0 0 0 16px;
    text-decoration: underline darkslategrey 5px;
}

@media screen and (max-width: 720px) {
    .root {
        transform: translateY(220%);
    }
    h1 {
        font-size: 4em;
    }
}